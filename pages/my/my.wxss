page{
    background-color: #ffffff;
    font-family: "Helvetica Neue","Hiragino Sans GB","Microsoft YaHei","\9ED1\4F53",Arial,sans-serif;
    font-size: 50rpx;
}
.navigator-hover{
    background: none;
}

.header{
    position: relative;
    height: 250rpx;
    line-height: 100rpx;
    padding:30rpx 30rpx 30rpx 150rpx;
    box-sizing: border-box;
    background:#2A2E43;
    font-size: 35rpx;
    color: #fff;
}
.header .thumb{
    position: absolute;
    left: 30rpx;
    top: 28rpx;
    width: 175rpx;
    height: 175rpx;
    border-radius: 50%;
}
.header .about{
    float: right;
}

.header .nickname{
    position: absolute;
    left: 225rpx;
    top: 57rpx;
    font-size:larger;
}

.address-box{
    border-bottom: 20rpx solid #ededed;
    color: #999;
    line-height: 90rpx;
    font-size: 35rpx;
    justify-content: center;        
    align-items:center;   
}
.address-box .address-manage{
    position: relative;
    height: 90rpx;
    border-bottom: 1rpx solid #e9e9e9;
    text-align: center;
  
}
.address-box .address-manage::after{
    position: absolute;
    right: 30rpx;
    top: 34rpx;
    content: '';
    width: 16rpx;
    height: 16rpx;
    border-top: 4rpx solid #7f7f7f;
    border-right: 4rpx solid #7f7f7f;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
     
}

.icon{
  display: flex;
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  left: 40rpx;
  top:15rpx;
  
}