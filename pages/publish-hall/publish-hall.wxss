/* pages/publish-hall/publish-hall.wxss */

.weui-grids {
  position: relative;
  overflow: hidden;
}

.itemgrid{
  position: relative;
  float: left;
  padding: 100rpx 70rpx;
  width: 50%;
  box-sizing: border-box;
  border-right: 1rpx solid #D9D9D9;
  border-bottom: 1rpx solid #D9D9D9;
}

.itemgrid_icon{
  display: block;
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
}

.itemgrid_label{
  margin-top: 10rpx;
  display: block;
  text-align: center;
  color: #000000;
  font-size: 40rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.weui-grid__icon {
  width: 32px;
  height: 32px;
  margin: 0 auto;
}
.weui-grid__icon image {
  display: block;
  width: 100%;
  height: 100%;
}
.weui-grid__icon + .weui-grid__label {
  margin-top: 5px;
}

