<!--pages/activity-details/activity-details.wxml-->
<!--第二版content-->
<!--顶部图片-->
<image src='../../img/people-1031169__340.jpg' class='header-image' mode='scaleFill'></image>
<view class='activity-msg-list'>
  <view class='act-title'>
    <view class='header'>活动标题{{item.ac_name}}</view>
    <!--<image class='collection'></image>-->
  </view>
  <view class='act-items'>收藏人数{{item.ac_lnum}}</view>
  <view class='act-items'>活动发布时间{{item.ac_pdate}}</view>
  <view class='act-items'>主办方/举办人{{item.ac_cre}}</view>
  <view class='act-items'>联系方式{{item.ac_tel}}</view>
  <view class='act-items'>报名人数{{item.ac_num}}</view>
  <view class='act-items'>活动开始时间{{item.ac_sdate}}</view>
  <view class='act-items'>活动结束时间{{item.ac_edate}}</view>
</view>
<view class='activity-msg-detail'>
  <view class='detail-title'>
    <view class='header'>活动详情</view>
  </view>
  <view class='act-deatils'>{{item.ac_del}}</view>
</view>
<view class='map-box'>
  <!--地图接口-->地图API
</view>
<view class='signin-btn'>
  <navigator url='../join-activity-hall/join-activity-hall'>
    <i-button type="success" shape="circle" size="large">确认报名</i-button>
  </navigator>
    <i-button bindtap='handleSubmit' type="success" shape="circle" size="large" bindtap='handleSubmit'>收藏活动</i-button>
 
</view>

